<h1>投稿一覧</h1>

<div>
  <%= link_to '新規投稿', new_post_path %>
</div>
<div>
  <div>
    <%= search_form_for @q do |f| %>
      <%= f.label :name_cont, "名称" %>
      <%= f.search_field :name_cont, placeholder: "名前を検索" %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div>
    <%= search_form_for @q do |f| %>
      <%= f.label :created_at_gteq, "日時" %>
      <%= f.search_field :created_at_gteq %>
      <%= f.submit "検索" %>
    <% end %>
  </div>

  <% @posts.each do |post| %>
    <div>
      <%= link_to post.user.name, user_path(post.user) %>
    </div>
    <div>
      <%= link_to post.name, post_path(post) %>
    </div>
    <div>
      <%= post.description %>
    </div>
    <div>
      <%= Date.current %>
    </div>
  <% end %>
  <%= paginate @posts %>
  <%= page_entries_info @posts %>
</div>
