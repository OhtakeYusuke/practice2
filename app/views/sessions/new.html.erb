<h1>ログイン</h1>

<div>
  <%= form_with scope: :session, local: true do |f| %>
    <div>
      <%= f.label :email %>
    </div>
    <div>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit nil %>
    </div>
  <% end %>
</div>
